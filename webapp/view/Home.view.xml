<mvc:View
  controllerName='ui5.template.controller.Home'
  displayBlock='true'
  xmlns='sap.m'
  xmlns:mvc='sap.ui.core.mvc'>
  <Page showHeader='false' class='bg'>
    <VBox fitContainer='true' justifyContent='Center' alignItems='Center'>
      <HBox class='wrapper sapUiResponsiveContentPadding' justifyContent='Center' wrap='Wrap'>
        <VBox justifyContent='Center' alignItems='Center' class='sapUiTinyMargin'>
          <Image width='300px' src='assets/illustration-woman-online-desktop.svg'/>
        </VBox>
        <VBox justifyContent='Center' class='sapUiTinyMargin'>
          <Title text='FAQ' titleStyle='H1'/>
          <VBox items='{state>/items}'>
            <items>
              <Panel headerText='{state>title}' expandable='true'>
                <Text width='300px' text='{state>text}'/>
              </Panel>
            </items>
          </VBox>
        </VBox>
      </HBox>
    </VBox>
  </Page>
</mvc:View>
